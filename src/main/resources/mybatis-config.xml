</settings>
<typeAliases>
<typeAlias type="com.my.board.dto.Board" alias="Board"/><!-- dto별칭설정 -->
<typeAlias type="com.my.board.dto.Reply" alias="Reply"/>
</typeAliases>
 
 <mappers>
    <mapper resource="Board.xml"/>
 </mappers>
</configuration>